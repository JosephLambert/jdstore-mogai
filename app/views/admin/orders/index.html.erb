<h2>订单列表</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>生成时间</th>
            <th>订购者</th>
            <th>订单状态</th>
            <th>选项</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= link_to(order.id, admin_order_path(order))%></td>
                <td><%= order.created_at.to_s(:long)%></td>
                <td><%= order.user.email%></td>
                <td><%= order.aasm_state%></td>
                <td>
                    <%= link_to "向上", move_up_admin_order_path(order), method: :patch %>
                    <%= link_to "向下", move_down_admin_order_path(order), method: :patch %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @orders , class: "apple_pagination"%>

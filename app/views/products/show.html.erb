<div class="row">
    <div class="col-md-10 col-md-offset-1   bg-white space-50">
        <div class="preview col-md-6   space-50" >
            <div class="preview-pic tab-content" >
                <% if @product.photos.present? %>
                    <div class="tab-pane active" id="pic-1"><%= image_tag(@product.photos[0].image.medium.url) %></div>
                    <% if @product.photos[1].present? %>
                        <div class="tab-pane" id="pic-2"><%= image_tag(@product.photos[1].image.medium.url) %></div>
                    <% end %>
                    <% if @product.photos[2].present? %>
                        <div class="tab-pane" id="pic-3"><%= image_tag(@product.photos[2].image.medium.url) %></div>
                    <% end %>
                    <% if @product.photos[3].present? %>
                        <div class="tab-pane" id="pic-4"><%= image_tag(@product.photos[3].image.medium.url) %></div>
                    <% end %>
                    <% if @product.photos[4].present? %>
                        <div class="tab-pane" id="pic-5"><%= image_tag(@product.photos[4].image.medium.url) %></div>
                    <% end %>
                </div>
                <ul class="preview-thumbnail nav nav-tabs">
                    <li class="active"><a data-target="#pic-1" data-toggle="tab"><%= image_tag(@product.photos[0].image.thumb.url) %></a></li>
                    <% if @product.photos[1].present? %>
                        <li><a data-target="#pic-2" data-toggle="tab"><%= image_tag(@product.photos[1].image.thumb.url) %></a></li>
                    <% end %>
                    <% if @product.photos[2].present? %>
                        <li><a data-target="#pic-3" data-toggle="tab"><%= image_tag(@product.photos[2].image.thumb.url) %></a></li>
                    <% end %>
                    <% if @product.photos[3].present? %>
                        <li><a data-target="#pic-4" data-toggle="tab"><%= image_tag(@product.photos[3].image.thumb.url) %></a></li>
                    <% end %>
                    <% if @product.photos[4].present? %>
                        <li><a data-target="#pic-5" data-toggle="tab"><%= image_tag(@product.photos[4].image.thumb.url) %></a></li>
                    <% end %>
                </ul>
            <% end %>
            <div class="space-30">
            </div>
        </div>
        <div class="product-show-part">
            <div class="product-details col-md-6  space-50 ">
                <h3><%= @product.title %></h3>
                <h4><%= @product.slogan %></h4>
                <div class="price-service">
                    <p class="price space-20">售价： <span class="rmb">￥</span><span class="price"><%= @product.price %></span></p>
                    <p class="service">服务： <span class="service-detail">7天退货|1年保修</span></p>
                    <div class="space-30">
                    </div>
                </div>
                <div class="quantity-size">
                    <p class="delivery space-20">类别： <span class="delivery"><%= @product.category %></span></p>
                    <div style="margin-top:200px;">
                    </div>
                </div>
                <div class="action space-20">
                    <div class="col-md-12">
                        <% if @product.quantity.present? && @product.quantity > 0 %>
                            <%= link_to("立即购买", instant_buy_product_path(@product), class: "buy btn btn-block ", style: "padding-top:6px;", :method => :post) %>
                        <% else %>
                            已销售一空，无法购买
                    <% end %>
                    </div>
                    <div class="col-md-12" >
                        <% if @product.quantity.present? && @product.quantity > 0 %>
                            <%= link_to("加入购物车", add_to_cart_product_path(@product), class: "add-to-cart btn btn-block ",style: "padding-top:6px;",:method => :post) %>
                        <% else %>
                            已销售一空，无法购买
                     <% end %>
                    </div>
                </div>
                <div class="row share">
                    <hr />
                    <div class="col-md-6 index_more">
                        <% if @product.attachment.present? %>
                            <i class="fa fa-paperclip"> </i>
                            <%= link_to("下载产品说明书", @product.attachment_url) %>
                        <% else %>
                            暂无产品PDF提供下载
                        <% end %>
                    </div>
                </div>
                <div class="space-30">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0 bg-white space-20">
        <h3 class="shangpinxaingqing" >商品详情：</h3>
        <div class="post-description space-30">
            <%= raw @product.description %>
        </div>
    </div>
</div>

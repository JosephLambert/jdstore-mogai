<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="container-fluid">
            <div class="row">
                <div class="pwd space-30">
                    <p class="left-15">首页／无线知识</p>
                </div>
                <div class="col-md-8 space-20">
                    <!-- Trigger the modal with a pic & link -->
                    <div class="cpad" data-toggle="modal" data-target="#wirelessvideo">
                        <%= image_tag(@intro11.image.ad3, :class => "width-100") %>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="wirelessvideo" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                1111
                            </div>
                        </div>
                    </div>
                    <div class="cpad" style="margin-top:10px;">
                        <%= link_to @intro12.link, target: "_blank" do %>
                            <%= image_tag(@intro12.image.ad3, :class => "width-100") %>
                        <% end %>
                    </div>
                </div>
                <div class="col-md-4" style="padding-left:6px;">
                    <div class="cpad-v space-20">
                        <%= link_to @intro13.link, target: "_blank" do %>
                            <%= image_tag(@intro13.image.ad4, :class => "width-100") %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row  space-30">
    <div class="col-md-2" style="margin-right:30px;">
    </div>
    <div class="col-md-8 bg-white" style="max-width:910px;padding:0px;">
        <div class="container-fluid">
            <div class="row space-30">
                <div class="col-md-4" style="padding:0px;">
                    <hr class="header-hr">
                </div>
                <div class="col-md-4" style="padding:0px;">
                    <h2 class="header">专业无线知识汇总</h2>
                </div>
                <div class="col-md-4" style="padding:0px;">
                    <hr class="header-hr">
                </div>
            </div>
            <div class="row " style="margin-top:5px;">
                <div class="col-md-12 text-center">
                    <a href="#" style="color:#1690dc;">
                        <p>查看更多</p>
                    </a>
                </div>
            </div>
            <!-- post -->
            <div class="row space-30">
                <% @posts.each do |post| %>
                    <div class="col-md-6 text-left">
                        <p  class="post-link" data-toggle="collapse" data-target="#<%= post.id %>"><%= post.title%><i class="fa fa-plus pull-right" style="color:#e2e2e2;" aria-hidden="true"></i></p>
                        <div id="<%= post.id %>" class="collapse post-collapse">
                            <p> <%= (truncate(strip_tags(post.description), :length => 100, :omission => '...')).html_safe %></p>
                            <a href="posts/<%= post.id %>" class="pull-right more">查看详情</a>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="space-50">
        </div>
    </div>
</div>
<!-- hr -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <hr style="margin:30px 0px 0px 0px;border-top: 1px solid #eeeeee;">
        </div>
    </div>
</div>

<div class="row" style="margin-top:10px;">
    <div class="col-md-12">
        <div class="search-box">
            <div class="container-fluid">
                <div class="row" style="margin-top:80px;">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="search-bar">
                            <%= form_tag search_products_path , :method => :get  do %>
                                <div class="input-group " id="search-id" >
                                    <input type="text" class="search-input" name="q" value="<%= params[:q] %>" placeholder="请输入您的问题...">
                                    <div class="input-group-btn ">
                                        <button class="btn  search-icon" type="submit" style="padding-top:6px;">
                                            <i class="fa fa-search" style="color:#fff;font-size:26px;"></i>
                                        </button>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class='container'>
    <div class='row content-box'>
        <div class='col-md-12'>
            <!--页面标题-->
            <h3 class="center"><i class='fa fa-shopping-cart'></i> 购物清单</h3>
            <hr />
            <!--购物车信息-->
            <div class='row'>
                <div class='col-xs-12 col-md-12 cart-item-box'>
                    <% current_cart.cart_items.each do |cart_item| %>
                        <div class="row commonlink" style="padding-left: 20px;padding-bottom:15px;">
                            <!-- <div class="col-sm-2 col-xs-2">
                                <% if cart_item.product.photos.present? %>

                                    <%= image_tag(cart_item.product.photos[0].image.thumb.url ) %>
                                <% else %>
                                    <%= image_tag('http://placehold.it/200x200&text=No Pic') %>
                                <% end %>
                            </div> -->
                            <div class='name col-sm-6 col-xs-6'><%= link_to(cart_item.product.title, product_path(cart_item.product)) %></div>
                            <div class='price col-sm-1 col-xs-1'><%= cart_item.product.price %></div>
                            <div class='quantity col-sm-2 col-xs-2'>x <%= cart_item.quantity %></div>
                            <div class='count col-sm-1 col-xs-1'> <%= render_product_price_count(cart_item.product,cart_item.quantity) %></div>
                        </div>
                    <% end %>
                </div>
            </div>
            <br/>
            <!-- 购物车内商品总价 -->
            <div class='clearfix'>
                <div class='pull-right'>合计： <%= render_cart_total_price(current_cart) %></div>
            </div>
            <hr/>
            <!-- 订单信息 -->
            <div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1'>
                <h3 class="center"><i class='fa fa-credit-card'></i> 订单信息</h3>
                <!-- 订单输入表单-->
                <div class='order-form'>
                    <%= simple_form_for @order do |f| %>
                        <div class='form-group'>
                            <!-- 付款人 -->
                            <legend>付款信息</legend>
                            <%= f.input :billing_name, placeholder: "姓名", :label => "付款人-姓名" %>
                            <%= f.input :billing_phone, placeholder: "电话",  :label => "付款人-电话" %>
                            <hr>
                            <!-- 收货人 -->
                            <legend>寄送信息</legend>
                            <%= f.input :shipping_name, placeholder: "姓名",  :label => "收件人-姓名" %>
                            <%= f.input :shipping_phone, placeholder: "电话",  :label => "收件人-电话" %>
                            <%= f.input :shipping_address, placeholder: "地址",  :label => "收件人-地址" %>
                            <hr>
                        </div>
                        <!-- 确认 -->
                        <div class='form-actions center'>
                            <%= f.submit "确认订单", class: 'btn btn-md btn-primary' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<h2> Edit Post </h2>
<%= simple_form_for [:admin, @post] do |f| %>
    <div class="group">
        <%= f.input :title %>
    </div>
    <div class="group">
        <%= f.cktext_area :description, ckeditor: { toolbar: 'mini', language: 'zh-CN'} %>
    </div>
    <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>

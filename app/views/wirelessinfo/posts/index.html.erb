            <div class="row space-30">
                <% @posts.each do |post| %>
                    <div class="col-md-6 text-left">
                        <p class="post-link"> <%= link_to(post.title, wirelessinfo_post_path(post)) %> </p>
                    </div>
                <% end %>
            </div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="container-fluid">
            <div class="row">
                <div class="pwd space-30">
                    <p class="left-15">首页／无线知识</p>
                </div>
                <div class="col-md-8 space-20">
                    <div class="cpad">
                        <%= link_to @intro11.link, target: "_blank" do %>
                            <%= image_tag(@intro11.image.ad3, :class => "width-100") %>
                        <% end %>
                    </div>
                    <div class="cpad" style="margin-top:10px;">
                        <%= link_to @intro12.link, target: "_blank" do %>
                            <%= image_tag(@intro12.image.ad3, :class => "width-100") %>
                        <% end %>
                    </div>
                </div>
                <div class="col-md-4" style="padding-left:6px;">
                    <div class="cpad-v space-20">
                        <%= link_to @intro13.link, target: "_blank" do %>
                            <%= image_tag(@intro13.image.ad4, :class => "width-100") %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% @posts.each do |post| %>
    <tr>
        <td>
            <%= link_to(post.title, wirelessinfo_post_path(post)) %>
        </td>
    </tr>
<% end %>
搜索框
<div class="nav navbar-nav navbar-left" style="width: 386px;padding-top: 8px;padding-left: 90px;">
    <%= form_tag search_products_path , :method => :get  do %>
        <div class="input-group" id="search-id" >
            <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索产品或文章...">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    <% end %>
</div>

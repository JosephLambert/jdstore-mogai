<div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <div class="container-fluid">
            <div class="row">
                <div class="pwd space-30">
                    <p class="left-15">首页／无线知识</p>
                </div>
                <div class="col-md-8 col-sm-8 sol-xs-12 space-20">
                    <!-- Trigger the modal with a pic & link -->
                    <div class="cpad" data-toggle="modal" data-target="#wirelessvideo">
                        <% if @intro10.image.present? %>
                            <%= image_tag(@intro10.image.ad3, :class => "width-100") %>
                        <% else %>
                            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "pic579276") %>
                        <% end %>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="wirelessvideo" role="dialog">
                        <!-- Modal content-->
                        <div  class="video-position">
                            <%= video_tag @video.content_url.to_s ,:controls =>true ,:autoplay => false %>
                        </div>
                    </div>
                    <div class="cpad" style="margin-top:10px;">
                        <%= link_to @intro11.link, target: "_blank" do %>
                            <% if @intro11.image.present? %>
                                <%= image_tag(@intro11.image.ad3, :class => "width-100") %>
                            <% else %>
                                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "pic579276") %>
                            <% end %>
                        <% end %>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 sol-xs-12" style="padding-left:6px;">
                    <div class="cpad-v space-20">
                        <%= link_to @intro12.link, target: "_blank" do %>
                            <% if @intro12.image.present? %>
                                <%= image_tag(@intro12.image.ad4, :class => "width-100") %>
                            <% else %>
                                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "pic294580") %>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row  space-30">
    <div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0 col-xs-12 bg-white wireless-posts-block" >
        <div class="container-fluid">
            <div class="row space-30">
                <div class="col-md-4 col-sm-4 col-xs-4" style="padding:0px;width:33.2%;">
                    <hr class="header-hr">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" style="padding:0px;width:33.2%;">
                    <h2 class="header">专业无线知识汇总</h2>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" style="padding:0px;width:33.2%;">
                    <hr class="header-hr">
                </div>
            </div>
            <div class="row " style="margin-top:5px;">
                <div class="col-md-12 text-center">
                    <p class="index_more"><%= link_to("查看更多", wirelessinfo_afterindex_path(:subcate => "无线1")  )%></li>
                </p>
            </div>
        </div>
        <!-- post -->
        <div class="row space-30">
            <% @posts.each do |post| %>
                <div class="col-md-6 text-left">
                    <p  class="post-link" data-toggle="collapse" data-target="#<%= post.id %>"><%= post.title%>
                        <!-- <i class="fa fa-plus pull-right" style="color:#e2e2e2;" aria-hidden="true"></i> -->
                        <img src="https://ww3.sinaimg.cn/large/006tNc79ly1fhg0pdxya9j300e00e0i2.jpg" class="pull-right" style="padding:4px 0px;" alt="plus">
                    </p>
                    <div id="<%= post.id %>" class="collapse post-collapse">
                        <p style="margin-bottom:40px;"> <%= (truncate(strip_tags(post.description), :length => 100, :omission => '...')).html_safe %></p>
                        <a href="posts/<%= post.id %>" class="pull-right more"><span style="font-size:13px;">查看详情</span></a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="space-50">
    </div>
</div>
</div>
<!-- hr -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <hr style="margin:30px 0px 0px 0px;border-top: 1px solid #eeeeee;">
        </div>
    </div>
</div>

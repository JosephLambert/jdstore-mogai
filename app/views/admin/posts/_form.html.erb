<div class="col-md-8 col-md-offset-2">
    <hr style="size:2px" />
    <%= simple_form_for [:admin, @post] do |f| %>
        <div class="group">
            <%= f.input :title ,:label => "文章标题"%><br>
        </div>
        <div class="group">
            <%= f.input :slogan ,:label => "宣传语"%><br>
        </div>
        <div class="group">
            <% Post::CATEGORY.each do |c| %>
                <label>
                    <%= f.radio_button :category, c %>
                    <%= t(c, :scope => "post.category") %>
                </label>
            <% end %>
        </div>
        <br>
        <div class="group">
            <% Post::SUBCATE.each do |c| %>
                <label>
                    <%= f.radio_button :subcate, c %>
                    <%= t(c, :scope => "post.subcate") %>
                </label>
            <% end %>
        </div>
        <br>
        <div class="group">
            <% if @post.new_record? %>
            <% else %>
                <% if @post.postpic.present? %>
                    <span>目前文章封面图</span><br>
                    <%= image_tag @post.postpic.url %><br/>
                <% end %>
            <% end %>
            <br>
            <%= f.input :postpic,as: :file, :label => "上传文章封面图"%>
        </div>
        <br>
        <div class="group">
            <%= f.cktext_area :description, ckeditor: { toolbar: 'mini', language: 'zh-CN'} %>
        </div>
        <br>
        <div class="group">
            <%= f.input :is_hidden ,:label => "勾选为隐藏"%>
        </div>
        <br>
        <div class="form-actions">
            <%= f.submit "提交", class: 'btn btn-md btn-primary' %>
        </div>
        <br>
    <% end %>
    <div class="space-50">
    </div>
</div>
